alias hibernate="systemctl hibernate"

function yourt {
    yaourt --color -Ss "$1" | grep '^\S*[ce]\w*/' -A1
}

function urman {
    aurman -Ss "$1" | grep '^\S*[ce]\w*/' -A1
}

